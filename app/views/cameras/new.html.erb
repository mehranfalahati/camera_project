<h1>New Camera To Sell</h1>

<%= form_for(@camera, :html => {:multipart => true}) do |f| %>
    <%= f.label :name, :class => "form-label" %>
    <%= f.text_field :name, :placeholder => '5D', :required => true, :class => "form-control form-control-sm" %>

    <%= f.label :brand, :class => "form-label" %>
    <%= f.text_field :brand, :placeholder => 'Nikon, Soney', :required => true, :class => "form-control form-control-sm" %>

    <%= f.label :price, :class => "form-label" %>
    <%= f.text_field :price, :required => true, :class => "form-control form-control-sm" %>

    <%= f.label :details, :class => "form-label" %>
    <%= f.text_area :details, :class => "form-control" %>

    <div class="mb-3">
        <%= f.label :"Please attach you camera's photo" %>
        <%= f.cl_image_upload :image %>
    </div>
 
    <%= f.submit "Publish Camera", :class => "btn btn-outline-primary" %>

<% end %>
