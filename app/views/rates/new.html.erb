<h1>New Comment</h1>

<%= form_for @rate do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, :required => true %>

    <%= f.label :comment %>
    <%= f.text_area :comment, :required => true %>
    <%= f.hidden_field :camera_id, value: params[:id] %>

    <%= f.submit "Post Comment" %>

<% end %>